{
    "manifest_version":  2,
    "name":  "JaDict (Jacob Dictionary)",
    "version":  "0.2",
    "description":  "Tra cứu JaDict: tra từ và dịch câu ngoại tuyến/AI.",
    "permissions":  [
                        "storage",
                        "unlimitedStorage",
                        "clipboardWrite",
                        "\u003call_urls\u003e"
                    ],
    "browser_action":  {
                           "default_title":  "JaDict"
                       },
    "background":  {
                       "scripts":  [
                                       "background.js"
                                   ],
                       "persistent":  false
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "\u003call_urls\u003e"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "css":  [
                                            "content.css"
                                        ]
                            }
                        ],
    "web_accessible_resources":  [
                                     "popup.html",
                                     "popup.css",
                                     "popup.js",
                                     "action.html",
                                     "action.css",
                                     "action.js",
                                     "options.html",
                                     "options.css",
                                     "options.js",
                                     "settings.js",
                                     "loader.html",
                                     "loader.css"
                                 ],
    "options_ui":  {
                       "page":  "options.html",
                       "open_in_tab":  true
                   },
    "browser_specific_settings":  {
                                      "gecko":  {
                                                    "id":  "jadict@huuunleashed",
                                                    "strict_min_version":  "102.0",
                                                    "data_collection":  {
                                                                            "collects_data":  false
                                                                        }
                                                }
                                  }
}