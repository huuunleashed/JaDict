{
  "manifest_version": 3,
  "name": "JaDict (Jacob Dictionary)",
  "version": "0.2",
  "description": "Tra cứu JaDict: tra từ và dịch câu ngoại tuyến/AI.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "JaDict",
    "default_popup": "action.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.css",
        "popup.js",
        "options.html",
        "options.css",
        "options.js",
        "settings.js",
        "loader.html",
        "loader.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
